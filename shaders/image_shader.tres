[sub_resource type="Shader" id=1]
code = "shader_type canvas_item;

uniform bool is_greyscale = false;

void fragment() {
	if (is_greyscale) {
	vec3 col = texture(TEXTURE, UV).rgb;
	float y = col.r * 0.299 + col.g * 0.587 + col.b * 0.114;
	COLOR.rgb = vec3(y)
	}
	else {
		COLOR = texture(TEXTURE, UV);
	}
}"

