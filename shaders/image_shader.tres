code = "shader_type canvas_item;

uniform bool is_greyscale = false;

void fragment() {
	if (is_greyscale) {
    COLOR = texture(TEXTURE, UV);
    float avg = (COLOR.r + COLOR.g + COLOR.b) / 3.0;
    COLOR.rgb = vec3(avg);
	}
	else {
		COLOR = texture(TEXTURE, UV);
	}
}
